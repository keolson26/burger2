<h1>Eat the Burger</h1>

<div class = "row">


<div class="panel panel-default" id = "devourSpace">
  <div class="panel-heading">Eaten Burgers</div>
  <div class="panel-body">
  		<ul>
			{{#each burger}}
				{{#if this.devoured}}
				<li>{{this.burger_name}}</li>

					<form action="/{{this.id}}?_method=DELETE" method="POST">
          				<input type="hidden" name="id" value="{{this.id}}">
          				<button type="submit">Remove!</button>
        			</form>

				{{/if}}
			{{/each}}
		</ul>
  </div>
</div>

<div class="panel panel-default" id = "newSpace">
  <div class="panel-heading">New Burgers</div>
  <div class="panel-body">
		<ul>
			{{#each burger}}
				{{#unless this.devoured}}
					<li>{{this.burger_name}}

					<form action="/{{this.id}}?_method=PUT" method="POST">
          				<input type="hidden" name="devoured" value="true">
          				<button type="submit">Eat It!</button>
        			</form>

        			</li>
				{{/unless}}
			{{/each}}
		</ul>
  </div>
</div>

	
<div class = "row">

	<div class = "col-md-4"></div>

	<div class = "col-md-4">

		<div class="panel panel-default" id = "addSpace">
			 <div class="panel-heading">Add a burger</div>
			 <form action="/" method="POST">
				<textarea type="text" name="burger"></textarea>
				<button type="submit">Add Burger</button>
			</form>
		</div>
	</div>
	<div class = "col-md-4"></div>
</div>



	
